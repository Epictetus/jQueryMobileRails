<div data-role="header">
  <%= link_to 'Back', todos_path, "data-icon"=>"arrow-l" %>
  <h1>Todo詳細</h1>
  <%= link_to 'Edit', edit_todo_path(@todo), "data-icon"=>"check" %> 
</div>

<div data-role="content">
  <p id="notice"><%= notice %></p>

  <p>
    <b>Due:</b>
    <%= @todo.due %>
  </p>

  <p>
    <b>Task:</b>
    <%= @todo.task %>
  </p>
</div>

